{
  "name": "anvil-interop",
  "version": "1.0.0",
  "description": "Multi-chain Anvil testing environment for ZKsync interoperability",
  "main": "index.ts",
  "scripts": {
    "start": "bash verify-config.sh && ts-node index.ts",
    "dev": "bash verify-config.sh && ts-node index.ts",
    "build": "tsc",
    "clean": "rm -rf dist outputs",
    "cleanup": "bash cleanup.sh",
    "step1": "ts-node step1-start-chains.ts",
    "step2": "ts-node step2-deploy-l1.ts",
    "step3": "ts-node step3-register-chains.ts",
    "step4": "ts-node step4-initialize-l2.ts",
    "step5": "ts-node step5-setup-gateway.ts",
    "step6": "ts-node step6-start-settler.ts",
    "step:all": "yarn step1 && yarn step2 && yarn step3 && yarn step4 && yarn step5",
    "test:interop": "ts-node test-interop.ts",
    "send:interop": "ts-node send-interop-tx.ts",
    "send:l2-to-l2": "ts-node send-l2-to-l2.ts"
  },
  "keywords": [
    "anvil",
    "zksync",
    "testing",
    "ethereum",
    "interop"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.11.1",
    "@iarna/toml": "^2.2.5",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  }
}
